@using ECommerceSystem.Models
@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" disabled />
                            <label asp-for="Name" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="ImageUrl" class="form-control border-0 shadow" disabled />
                            <label asp-for="ImageUrl" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Price" class="form-control border-0 shadow" type="number" step="0.01" disabled />
                            <label asp-for="Price" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="DiscountAmount" class="form-control border-0 shadow" type="number" step="0.01" disabled />
                            <label asp-for="DiscountAmount" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StockQuantity" class="form-control border-0 shadow" type="number" disabled />
                            <label asp-for="StockQuantity" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow" disabled>
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="CategoryId" class="ms-2"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-danger form-control">Delete</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline border form-control">
                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.ImageUrl" style="border-radius:5px; border:1px solid #bbb9b9; width: 100%" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
